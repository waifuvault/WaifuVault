<%
function getCaptcha() {
    switch (captchaType) {
        case "turnstile":
            return "https://challenges.cloudflare.com/turnstile/v0/api.js";
        case "reCAPTCHA":
            return "https://www.google.com/recaptcha/api.js";
        case "hCaptcha":
            return "https://js.hcaptcha.com/1/api.js";
        default:
            return "";
    }
}
function getHtml() {
    switch (captchaType) {
        case "turnstile":
            return `<div class="cf-turnstile" data-theme="dark" data-sitekey="${process.env.CAPTCHA_SITE_KEY}"></div>`;
        case "reCAPTCHA":
            return `<div class="g-recaptcha" data-theme="dark" data-sitekey="${process.env.CAPTCHA_SITE_KEY}"></div>`;
        case "hCaptcha":
            return `<div class="h-captcha" data-theme="dark" data-sitekey="${process.env.CAPTCHA_SITE_KEY}"></div>`;
        default:
            return "";
    }
}
%>


<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <%- include('snippets/head.ejs'); %>

    <style>

        a {
            text-decoration: none;
        }

        .g-recaptcha > div {
            margin-top: 1em;

            text-align: center;
            width: auto !important;
            height: auto !important;
        }

        #g-recaptcha-response {
            display: block !important;
            position: absolute;
            margin: -78px 0 0 0 !important;
            width: 302px !important;
            height: 76px !important;
            z-index: -999999;
            opacity: 0;
        }
    </style>
</head>
<body>
<div id="overlay" class="hidden">
    <div id="loader" class="hidden"></div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card my-5 border-primary">
                <div class="card-header text-center">
                    Bucket token
                </div>
                <div class="card-body p-lg-3">
                    <div class="alert alert-info">
                        Buckets are virtual collections of files, accessible via a token.
                    </div>
                    <form action="/rest/auth/authenticate_bucket" method="post">
                        <div class="form-floating mb-3">
                            <input required name="token" type="text" class="form-control" id="tokenInput" placeholder="Bucket token">
                            <label for="tokenInput">Bucket token</label>
                        </div>
                        <div class="mb-3 text-center">
                            <%- getHtml() -%>
                        </div>
                        <div class="text-center">
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-outline-success">Gain Access</button>
                                <button type="button" id="createBucketButton" class="btn btn-outline-primary">Create bucket</button>
                            </div>
                        </div>
                    </form>
                </div>
                <% if(typeof internalError !== "undefined") { %>
                    <div class="card-footer">
                        <div class="alert alert-danger alert-dismissible" role="alert">
                            <%- message -%>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>
<% const captchaJsUrl = getCaptcha(); %>
<% if(captchaJsUrl){ %>
    <script src="<%- getCaptcha() -%>" async defer></script>
<% } %>
<%- include('snippets/scripts.ejs'); %>

<script>
    Site.loadPage(async () => {
        const tokenInput = document.getElementById("tokenInput");
        document.getElementById("createBucketButton")?.addEventListener("click", async () => {
            try{
                Site.loading(true);
                const response = await fetch(`${baseUrl}/bucket/create`);
                const json = await response.json();
                if(!response.ok){
                    alert(json.message);
                    return;
                }
                tokenInput.value = json.token;
            }finally{
                Site.loading(false);
            }
        });
    })
</script>
</body>
</html>
